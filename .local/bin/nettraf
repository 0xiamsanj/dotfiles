
#!/bin/bash

# Function to get the network speed
get_network_speed() {
    # Get the default network interface
    default_interface=$(ip route | awk '/default/ { print $5 }')

    # Check if the default interface is up and has a carrier
    if [ "$(cat /sys/class/net/${default_interface}/operstate 2>/dev/null)" == "up" ] && \
       [ "$(cat /sys/class/net/${default_interface}/carrier 2>/dev/null)" == "1" ]; then
        # Get the network speed
        network_speed=$(cat /sys/class/net/${default_interface}/speed 2>/dev/null)
        if [ -n "$network_speed" ]; then
            echo "${network_speed}Mb/s"
        else
            echo "Unknown"
        fi
    else
        echo "Disconnected"
    fi
}

# Display the network speed
echo "$(get_network_speed)"
